    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')

    #modifierQuestionnaire
        h1 Modifier un questionnaire
            .dropdown
                // https://getbootstrap.com/docs/5.0/components/buttons/
                button#dropdownRecupererCours.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
                    | Choisir un groupe-cours
                h4#ajouterQuestionnaire
                // https://getbootstrap.com/docs/5.0/components/dropdowns/
                ul#ListeGroupeCoursAjouterQuestionnaire.dropdown-menu.dropdown-listeGroupeCours(aria-labelledby='dropdownMenuButtonRecupererCours')

        table#tableQuestionnaire.table
            thead
                tr
                    th(scope='col') #
                    th(scope='col') Questionnaire
            tbody#tableBodyQuestionnaire
                tr
                    th(scope='row') 1
                    td Questionnaire 1
                tr
                    th(scope='row') 2
                    td Questionnaire 2
                tr
                    th(scope='row') 3
                    td Questionnaire 3

        input#inputNomQuestionnaire.form-control(type='questionnaire')
        .form-text Veuillez entrer le nom du questionnaire
        input#inputDescriptionQuestionnaire.form-control(type='questionnaire')
        .form-text Veuillez entrer la description du questionnaire
        .btn-group(role='group' aria-label='Basic radio toggle button group')
            input#btnradioActif.btn-check(type='radio' name='btnradio' autocomplete='off' checked value="Actif") 
            label.btn.btn-outline-primary(for='btnradioActif') Actif
            input#btnradioNonActif.btn-check(type='radio' name='btnradio' autocomplete='off' value="Non-actif")
            label.btn.btn-outline-primary(for='btnradioNonActif') Non-actif
        
        button#btnAjouterQuestionnaire.btn.btn-primary(type='button') Ajouter le questionnaire
        h4#etatQuestionnaire Questionnaire en creation 
        
        .dropdown
            button#dropdownTypeQuestion.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
            ul#ListeTypeQuestionAjouterQuestionnaire.dropdown-menu.dropdown-listeTypeQuestion(aria-labelledby='dropdownMenuButtonTypeQuestion')

        .dropdown
            // https://getbootstrap.com/docs/5.1/components/list-group/
            button#dropdownChoisirQuestion.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false') Choisir une question
            ul#ListeQuestionsAjouterQuestionnaire.dropdown-menu.dropdown-listeGroupeCours(aria-labelledby='dropdownMenuButtonAjouterQuestionnaire')
        h4#questionChoisi 
        button#btnAjouterQuestion.btn.btn-primary(type='button') Ajouter la question au questionnaire




